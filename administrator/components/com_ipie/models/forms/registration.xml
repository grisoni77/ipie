<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="registration_id"
            type="hidden"
        />
        
        <field 
            name="name" 
            type="text"
            default=""
            label="Nome azienda"
            required="true"
        />
        
        <field 
            name="company_id" 
            type="freecompany"
            default=""
            label="Seleziona azienda"
            description="Seleziona azienda tra quelle presenti nel db Promopoint e non associate"
            required="false"
        />

        <field 
            name="piva" 
            type="text"
            default=""
            label="Partita IVA"
            description="Partita IVA"
            required="true" 
            maxlength="11"
        />
        
        <field 
            name="province_id" 
            type="province"
            default=""
            label="Provincia"
            description="Provincia"
            required="true" 
        />
        
        <field 
            name="city_id" 
            type="city"
            default=""
            label="Città"
            description="Città"
            required="true" 
            provfld="province_id" 
        />
                
        <field 
            name="email" 
            type="text"
            default=""
            label="E-mail"
            required="true"
        />
        
        <field 
            name="username" 
            type="text"
            default=""
            label="Nome utente"
            required="true"
        />
        
        <field 
            name="password" 
            type="password"
            default=""
            label="Password"
            required="true"
        />
        
        
    </fieldset>
</form>